<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN"
                         "http://castor.exolab.org/mapping.dtd">
<mapping>
        
        <class name="org.simbrain.workspace.WorkspaceSerializer">
            <field name = "networkList" collection = "collection" type="org.simbrain.network.NetworkFrame">
                <bind-xml name = "networkFrame" node="element"/>
            </field>   
            <field name = "worldList" collection = "collection" type="org.simbrain.world.WorldFrame">
                <bind-xml name = "worldFrame" node="element"/>
            </field>               
            <field name = "gaugeList" collection = "collection" type="org.simbrain.gauge.GaugeFrame">
                <bind-xml name = "gaugeFrame" node="element"/>
            </field>       
            <field name = "couplingList" collection = "collection" type = "org.simbrain.coupling.Coupling">
                <bind-xml name = "coupling" node="element"/>
            </field>               
        </class>
        
        
        <class name = "org.simbrain.network.NetworkFrame">
            <field name = "path" transient = "false">
                <bind-xml name="path" node="attribute"/>
            </field> 
            <field name = "xpos" transient = "false">
                <bind-xml name="x" node="attribute"/>
            </field> 
            <field name = "ypos" transient = "false">
                <bind-xml name="y" node="attribute"/>
            </field> 
            <field name = "the_width" transient = "false">
                <bind-xml name="width" node="attribute"/>
            </field> 
            <field name = "the_height" transient = "false">
                <bind-xml name="height" node="attribute"/>
            </field>

        </class>

        <class name = "org.simbrain.world.WorldFrame">
            <field name = "path" transient = "false">
                <bind-xml name="path" node="attribute"/>
            </field> 
            <field name = "xpos" transient = "false">
                <bind-xml name="x" node="attribute"/>
            </field> 
            <field name = "ypos" transient = "false">
                <bind-xml name="y" node="attribute"/>
            </field> 
            <field name = "the_width" transient = "false">
                <bind-xml name="width" node="attribute"/>
            </field> 
            <field name = "the_height" transient = "false">
                <bind-xml name="height" node="attribute"/>
            </field> 
        </class>
        
        <class name = "org.simbrain.gauge.GaugeFrame">
            <field name = "path" transient = "false">
                <bind-xml name="path" node="attribute"/>
            </field> 
            <field name = "xpos" transient = "false">
                <bind-xml name="x" node="attribute"/>
            </field> 
            <field name = "ypos" transient = "false">
                <bind-xml name="y" node="attribute"/>
            </field> 
            <field name = "the_width" transient = "false">
                <bind-xml name="width" node="attribute"/>
            </field> 
            <field name = "the_height" transient = "false">
                <bind-xml name="height" node="attribute"/>
            </field> 
        </class>
         
        <class name="org.simbrain.coupling.Coupling">   
             <field name = "networkName">
                  <bind-xml name="network" node = "attribute"/>
             </field> 
            <field name = "neuronName">
                  <bind-xml name="neuron" node = "attribute"/>
             </field> 
             <field name = "worldName">
                    <bind-xml name="world" node = "attribute"/>
             </field> 
             <field name = "agentName">
                  <bind-xml name="agent" node = "attribute"/>
             </field> 
        </class>
        
        <class name="org.simbrain.coupling.MotorCoupling" extends = "org.simbrain.coupling.Coupling">
            <field name = "commandArray"  collection = "array" type = "java.lang.String"> </field>      
        </class>
        
        <class name="org.simbrain.coupling.SensoryCoupling" extends = "org.simbrain.coupling.Coupling"> 
            <field name = "sensorArray" collection = "array" type = "java.lang.String"></field>      
        </class>

</mapping>