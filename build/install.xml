<?xml version="1.0" encoding="iso-8859-1" standalone="yes"?>
<installation version="1.0">
	<info>
		<appname>Simbrain</appname>
		<appversion>2.0</appversion>
		<authors>
			<author name="Jeff Yoshimi" email="jyoshimi@ucmerced.edu"/>
		</authors>
		<url>http://www.simbrain.net</url>
	</info>
	<guiprefs width="640" height="480" resizable="yes"/>
	<locale>
		<langpack iso3="eng"/>
	</locale>
	<resources>
		<res id="LicencePanel.licence" src="Licence.txt"/>
		<res id="shortcutSpec.xml" src="shortcut.xml"/>
		<res id="InfoPanel.info" src="Readme.txt"/>
	</resources>
	<panels>
		<panel classname="HelloPanel"/>
		<panel classname="InfoPanel"/>
		<panel classname="LicencePanel"/>
		<panel classname="TargetPanel"/>
		<panel classname="PacksPanel"/>
		<panel classname="InstallPanel"/>
		<panel classname="ShortcutPanel"/>
		<panel classname="SimpleFinishPanel"/>
	</panels>
	<packs>
		<pack name="Base" required="yes">
			<file src="../bin" targetdir="$INSTALL_PATH"/>
			<file src="../lib" targetdir="$INSTALL_PATH"/>
			<file src="../scripts" targetdir="$INSTALL_PATH"/>
			<file src="../build.xml" targetdir="$INSTALL_PATH"/>
			<description>The base files</description>
		</pack>
		<pack name="Docs" required="no">
			<file src="../docs" targetdir="$INSTALL_PATH"/>
			<description>The documentation</description>
		</pack>
		<pack name="Sources" required="no">
			<file src="../src" targetdir="$INSTALL_PATH"/>
			<file src="../Simbrain.xcode" targetdir="$INSTALL_PATH"/>
			<file src="../utils" targetdir="$INSTALL_PATH"/>
			<description>The source files</description>
		</pack>
		<pack name="Simulations" required="no">
			<file src="../simulations" targetdir="$INSTALL_PATH"/>
			<description>The simulations</description>
		</pack>
	</packs>
	<native type="izpack" name="ShellLink.dll"/>
</installation>
